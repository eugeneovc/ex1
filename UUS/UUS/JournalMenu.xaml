<Page x:Class="UUS.JournalMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UUS"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="JournalMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Name="ViewBtn" Content="Открыть список оценок" FontFamily="Arial" FontSize="18" Grid.Row="0" Grid.Column="0" Width="250" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="ViewBtn_Click"/>
        <Button Name="AddBtn" Content="Выставить оценки" FontFamily="Arial" FontSize="18" Grid.Row="0" Grid.Column="1" Width="250" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="AddBtnClick"/>
    </Grid>
</Page>
